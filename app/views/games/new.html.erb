
<div class="container">

  <h1>New game</h1>

  <div class="row">
    <div class="letter-container">
      <% @letters.each do |letter| %>
      <div class="box"><%= letter.upcase %></div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <form action="/score" method="POST">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
          <div class="form-group mt-2">
            <label for="guess">What is the longest word you can find?</label>
            <div class="input-group">
              <input type="text" name="guess" id="guess" class="form-control">
              <div class="input-group-append">
                <input type="submit" value="play" class="btn btn-outline-secondary">
              </div>
            </div>
          </div>
      </form>
    </div>
  </div>

</div>
